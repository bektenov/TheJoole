@{
    ViewBag.Title = "View";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TropicalServer</title>
    <link href="~/Content/productsummary.css" rel="stylesheet" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
    </script>
    @Styles.Render("~/Content/ProductDetails.css")
    @Scripts.Render("~/Scripts/Product.js")
</head>
<body>
    <div id="product-details-page">
        <table id="description-table" class="table">
            <tr>
                <th>Manufacturer</th>
                <td>@Html.DisplayFor(model => model.Manufacturer)</td>
            </tr>
            <tr>
                <th>Series</th>
                <td>@Html.DisplayFor(model => model.Series)</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>@Html.DisplayFor(model => model.Model)</td>
            </tr>
        </table>
        <table id="type-table" class="table">
            <tr>
                <th>Use Type</th>
                <td>@Html.DisplayFor(model => model.UseType)</td>
            </tr>
            <tr>
                <th>Application</th>
                <td>@Html.DisplayFor(model => model.Application)</td>
            </tr>
            <tr>
                <th>Mounting Location</th>
                <td>@Html.DisplayFor(model => model.Mount)</td>
            </tr>
            <tr>
                <th>Accessories</th>
                <td>@Html.DisplayFor(model => model.Accessories)</td>
            </tr>
            <tr>
                <th>Model Year</th>
                <td>@Html.DisplayFor(model => model.ModelYear)</td>
            </tr>
        </table>
        <table id="tech-table" class="table">
            <tr>
                <th>Air Flow</th>
                <td>@Html.DisplayFor(model => model.AirFlow)</td>
            </tr>
            <tr>
                <th>Power (W)</th>
                <td>Min</td>
                <td>@Html.DisplayFor(model => model.MinPower)</td>
                <td>Max</td>
                <td>@Html.DisplayFor(model => model.MaxPower)</td>
            </tr>
            <tr>
                <th>Operating Voltage (VAC)</th>
                <td>Min</td>
                <td>@Html.DisplayFor(model => model.MinVolt)</td>
                <td>Max</td>
                <td>240@Html.DisplayFor(model => model.MaxVolt)td>
</tr>
            <tr>
                <th>Fan Speed (RPM)</th>
                <td>Min</td>
                <td>@Html.DisplayFor(model => model.MinRPM)</td>
                <td>Max</td>
                <td>@Html.DisplayFor(model => model.MaxRPM)</td>
            </tr>
            <tr>
                <th>Number of fan speeds</th>
                <td>@Html.DisplayFor(model => model.Speed)</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th>Sound at max speed (dBA)</th>
                <td>@Html.DisplayFor(model => model.Sound)</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th>Fan sweep diameter (in)</th>
                <td>@Html.DisplayFor(model => model.Sweep)</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th>Height (in)</th>
                <td>Min</td>
                <td>@Html.DisplayFor(model => model.MinHeight)</td>
                <td>Max</td>
                <td>@Html.DisplayFor(model => model.MaxHeight)</td>
            </tr>
            <tr>
                <th>Weight (lbs)</th>
                <td>@Html.DisplayFor(model => model.Weight)</td>
                <td></td>
                <td></td>
                <td></td>
        </table>
    </div>

</body>
</html>
