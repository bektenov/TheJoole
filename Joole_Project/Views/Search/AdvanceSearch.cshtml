                                //<li href="#">@item.Category_Name</li>

                                <li> <a href="#" name="Category" value="@item.Category_Name"> @item.Category_Name </a> </li>

                            }
                        }



                    </ul>


                    &nbsp;<input type="search" id="searchInput" class="auto-style1" name=" SubCategory" />

                    <datalist id="subCategories">

                        @* @foreach (var item in ViewBag.msg)
